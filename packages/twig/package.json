{
  "name": "@static-pages/twig",
  "version": "1.0.1",
  "description": "Twig template engine (uses twing package).",
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "prepack": "npm run test",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "watch:esm": "tsc --watch",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo { \"type\": \"commonjs\" }>cjs/package.json",
    "watch:cjs": "npm run build:cjs && tsc --project tsconfig.cjs.json --watch",
    "test": "eslint src && npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "clean": "rimraf esm cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/renderers.git"
  },
  "keywords": [
    "static",
    "pages",
    "generator",
    "renderer",
    "mvc",
    "jamstack",
    "view",
    "template",
    "twig"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/renderers/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "dependencies": {
    "marked": "^11.1.0",
    "twing": "^6.0.0-beta.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@static-pages/core": "^7.0.0-alpha.1"
  }
}
